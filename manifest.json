{
    "name": "YourBias",
    "version": "1.0",
    "description": "Find your bias.",
    "permissions": [
        "history",
        "storage"
    ],
    "background": {
        "scripts": ["scan.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "menu.html",
        "default_icon": {
            "128": "logo.png"
        }
    },
    "content_scripts": [{
        "js": ["menu.js", "feedback.js"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "manifest_version": 2
}
